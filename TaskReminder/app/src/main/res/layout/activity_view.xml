<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">
    <TextView
        android:id="@+id/judulApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/judulApp"/>
    <LinearLayout
        app:layout_constraintTop_toTopOf="@+id/horizontalLine"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingHorizontal="40dp"
            android:paddingBottom="50dp"
            android:background="@drawable/view">
            <TextView
                android:id="@+id/viewJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/header"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_calendar_month_24"/>
                <TextView
                    android:id="@+id/viewTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/12"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout><LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_access_time_24"/>
                <TextView
                    android:id="@+id/viewJam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_repeat_24"/>
                <TextView
                    android:id="@+id/viewUlang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sekali"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:onClick="toAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Tambah"
            android:background="@drawable/button"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>