<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/transaction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/transaction_box">
            <ImageView
                android:id="@+id/categoryBox"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/category_color"/>
            <LinearLayout
                app:layout_constraintStart_toEndOf="@+id/categoryBox"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/transaction_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="Gatau"/>
                <TextView
                    android:id="@+id/transaction_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:text="Gatau"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/transaction_nominal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Rp 30.000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/type_color"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/category_color"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:id="@+id/transaction_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="10sp"
                        android:textAlignment="textEnd"
                        android:text="2024-11-12"/>

                </LinearLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>