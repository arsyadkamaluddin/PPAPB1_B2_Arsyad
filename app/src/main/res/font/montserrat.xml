<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Regular -->
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/montserrat_regular" />

    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/montserrat_bold" />

    <!-- Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/montserrat_italic" />

    <!-- Bold Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/montserrat_bolditalic" />

    <!-- Light -->
    <font
        android:fontStyle="normal"
        android:fontWeight="300"
        android:font="@font/montserrat_light" />

    <!-- Thin -->
    <font
        android:fontStyle="normal"
        android:fontWeight="100"
        android:font="@font/montserrat_thin" />

    <!-- Medium -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/montserrat_medium" />

    <!-- Semi Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/montserrat_semibold" />

    <!-- Extra Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/montserrat_extrabold" />

    <!-- Black -->
    <font
        android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/montserrat_black" />
</font-family>
